<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#a0000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/bg_introduce_dialog"
        android:layout_centerInParent="true"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@mipmap/ic_homeclass_head"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程介绍"
                    android:layout_centerInParent="true"
                    android:textColor="#ca6016"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_20"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/dialog_tip_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/home_class_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorGreyText"
                android:textSize="@dimen/font_16"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="时间安排："
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/font_16"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="a.周中班：每周2至周5，（悉尼时间）下午12-3点或晚上8-11点，每天3小时，两周结束。"
                android:textColor="@color/colorGreyText"
                android:textSize="@dimen/font_16"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="b.周六班：每周六白天6小时，4周结束"
                android:textColor="@color/colorGreyText"
                android:textSize="@dimen/font_16"
                />
            <TextView
                android:id="@+id/home_class_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorGreyText"
                android:textSize="@dimen/font_16"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="时间安排：由学院与老师根据双方时间来决定。"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/font_16"
                />

            <TextView
                android:id="@+id/home_class_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/colorGreyText"
                android:textSize="@dimen/font_16"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="时间安排：由学院与老师根据双方时间来决定。"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/font_16"
                />

        </LinearLayout>
    </ScrollView>
        <Button
            android:id="@+id/dialog_class_close"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_shape"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/bule_dark"
            android:textSize="@dimen/font_12"
            android:text="关  闭" />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>