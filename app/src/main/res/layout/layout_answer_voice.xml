<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/layout_play_voice"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:layout_marginLeft="@dimen/item_left"
    android:layout_marginRight="@dimen/item_left"
    android:layout_marginTop="30dp"
    android:layout_height="57dp">

      <ImageView
            android:id="@+id/iv_play_bar_play_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@mipmap/ic_play_bar_btn_play" />

      <ProgressBar
          android:id="@+id/pb_play_bar_answer"
          android:layout_width="match_parent"
          android:layout_marginLeft="@dimen/item_left"
          android:layout_height="wrap_content"
          style="@android:style/Widget.ProgressBar.Horizontal"
          android:progressDrawable="@drawable/progress_bar_style" />
</LinearLayout>