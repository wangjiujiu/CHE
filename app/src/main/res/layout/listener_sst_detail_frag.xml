<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_weight="8"
            android:background="@color/white"
            android:scrollbars="none"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/item_top"
                android:paddingTop="@dimen/item_top"
                android:paddingLeft="@dimen/item_left"
                android:paddingRight="@dimen/item_left"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/listener_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_18"
                    android:textColor="@color/colorBlackText"
                    android:text=""
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top"
                    android:orientation="horizontal"
                    >
                    <!--标签-->
                    <TextView
                        android:id="@+id/listener_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_12"
                        android:background="@drawable/bg_status_full_yellow"
                        android:padding="@dimen/status_padding"
                        android:layout_marginRight="@dimen/item_left"
                        android:text=""
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/listener_seq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_12"
                        android:layout_marginRight="@dimen/item_left"
                        android:background="@drawable/bg_status_full_grey"
                        android:padding="@dimen/status_padding"
                        android:text="50 words"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/rs_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_12"
                        android:layout_marginRight="@dimen/item_left"
                        android:background="@drawable/bg_status_blue_shape"
                        android:padding="@dimen/status_padding"
                        android:text="#4961"
                        android:visibility="gone"
                        android:textColor="@color/colorBlueText"
                        />

                    <TextView
                        android:id="@+id/rs_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_12"
                        android:layout_marginRight="@dimen/item_left"
                        android:background="@drawable/bg_status_grey_shape"
                        android:padding="@dimen/status_padding"
                        android:visibility="gone"
                        android:text="2018-09"
                        android:textColor="@color/grey"
                        />
                </LinearLayout>

                <!--音频区-->
                <include layout="@layout/layout_play_voice" />

                <!--显示答案区-->

                <LinearLayout
                    android:id="@+id/vip_only"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/rs_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="@dimen/item_top"
                        android:textSize="@dimen/font_14"
                        android:textColor="@color/colorBlackText"
                        android:background="@drawable/bg_right_shape"
                        android:text=""
                        android:visibility="gone"
                        />

                <EditText
                    android:id="@+id/listener_fill_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:layout_marginTop="40dp"
                    android:gravity="top"
                    android:padding="10dp"
                    android:hint="your answer……"
                    android:background="@drawable/bg_btn_shape"
                    />
                <Button
                    android:id="@+id/listener_chcek_answer"
                    android:layout_marginTop="40dp"
                    style="@style/Button_CHECK"
                    android:text="check"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>