<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/item_top"
        android:paddingTop="@dimen/item_top"
        android:paddingLeft="@dimen/item_left"
        android:paddingRight="@dimen/item_left"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/item_rs_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="For and marketing course that requires the....."
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/colorBlackText"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/item_rs_num_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_status_full_grey"
            android:textColor="@color/white"
            android:padding="@dimen/status_padding"
            android:text=""
            android:layout_marginRight="10dp"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/item_rs_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_status_shape"
            android:textColor="@color/red"
            android:padding="@dimen/status_padding"
            android:text="新题"
            android:visibility="gone"
            android:textSize="@dimen/font_14" />
    </LinearLayout>
    <TextView
        android:id="@+id/item_rs_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="For and marketing course that requires the....."
        android:maxLines="2"
        android:ellipsize="end"
        android:visibility="gone"
        android:textColor="@color/colorGreyText"
        android:textSize="@dimen/font_14" />
    </LinearLayout>
    <include layout="@layout/common_single_line"/>
</LinearLayout>