<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--答题区域，fragment-->
    <include layout="@layout/white_toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:background="@color/white"
            android:minHeight="100dp"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/item_top"
                android:paddingTop="@dimen/item_top"
                android:paddingLeft="@dimen/item_left"
                android:paddingRight="@dimen/item_left"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/rs_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_18"
                    android:textColor="@color/colorBlackText"
                    android:text="Marketing Management"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top"
                    android:orientation="horizontal"
                    >
                    <!--标签-->
                    <TextView
                        android:id="@+id/rs_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_12"
                        android:background="@drawable/bg_status_full_yellow"
                        android:padding="@dimen/status_padding"
                        android:layout_marginRight="@dimen/item_left"
                        android:text=""
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/rs_words"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_12"
                        android:layout_marginRight="@dimen/item_left"
                        android:background="@drawable/bg_status_full_grey"
                        android:padding="@dimen/status_padding"
                        android:text="50 words"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/rs_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_12"
                        android:layout_marginRight="@dimen/item_left"
                        android:background="@drawable/bg_status_blue_shape"
                        android:padding="@dimen/status_padding"
                        android:text="#4961"
                        android:textColor="@color/colorBlueText"
                        />

                    <TextView
                        android:id="@+id/rs_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_12"
                        android:layout_marginRight="@dimen/item_left"
                        android:background="@drawable/bg_status_grey_shape"
                        android:padding="@dimen/status_padding"
                        android:text="2018-09"
                        android:textColor="@color/grey"
                        />
                </LinearLayout>


                <!--显示原文-->
                <TextView
                    android:id="@+id/rs_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_top"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/colorBlackText"
                    android:text=""
                    />
                <!--答题，单选功能器-->
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/mcs_detail_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_btn_height"
        android:background="@color/bottom_answer"
        android:orientation="horizontal">

        <Button
            android:id="@+id/answer_btn_previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:textColor="@color/colorDarkGreyText"
            android:text="上一题" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/answer_btn_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:textColor="@color/colorDarkGreyText"
            android:text="下一题" />
    </LinearLayout>

</LinearLayout>